<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.proyectofinal.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainScreen"
            app:destination="@id/mainScreen" />
    </fragment>
    <fragment
        android:id="@+id/addCityFragment"
        android:name="com.example.proyectofinal.AddCityFragment"
        android:label="fragment_addcity"
        tools:layout="@layout/fragment_addcity" />
    <fragment
        android:id="@+id/viewCityDetailsFragment"
        android:name="com.example.proyectofinal.ViewCityDetailsFragment"
        android:label="fragment_citydetails"
        tools:layout="@layout/fragment_citydetails" />
    <fragment
        android:id="@+id/mainScreen"
        android:name="com.example.proyectofinal.MainScreen"
        android:label="fragment_mainscreen"
        tools:layout="@layout/fragment_mainscreen" >
        <action
            android:id="@+id/action_mainScreen_to_addCityFragment"
            app:destination="@id/addCityFragment" />
        <action
            android:id="@+id/action_mainScreen_to_viewCityDetailsFragment"
            app:destination="@id/viewCityDetailsFragment" />
    </fragment>
</navigation>